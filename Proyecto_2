-- ejercicio 1

data Carrera = Matemática | Física | Computación | Astronomía
        deriving Eq

título :: Carrera -> String
título d | d == Matemática = "Licenciatura en Matemática"
         | d == Física = "Licenciatura en Física"
         | d == Computación = "Licenciatura en ciencias de la computación"
         | d == Astronomía = "Licenciatura en Astronomía"
 

data NotaBásica = Do | Re | Mi | Fa | Sol | La | Si
        deriving Eq 

cifradoAmericano :: NotaBásica -> Char
cifradoAmericano a | a == Do = 'C'
                   | a == Re = 'D'
                   | a == Mi = 'E'
                   | a == Fa = 'F'
                   | a == Sol = 'G'
                   | a == La = 'A'
                   | a == Si = 'B'
    
