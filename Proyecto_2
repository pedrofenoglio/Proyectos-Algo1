-- Ejercicio 1

data Carrera = Matemática | Física | Computación | Astronomía

título :: Carrera -> String
título Matemática = "Licenciatura en Matemática"
título Física = "Licenciatura en Física"
título Computación = "Licenciatura en ciencias de la computación"
título Astronomía = "Licenciatura en Astronomía"
 

data NotaBásica = Do | Re | Mi | Fa | Sol | La | Si 
    deriving (Eq, Ord, Show)

                

cifradoAmericano :: NotaBásica -> Char
cifradoAmericano Do = 'C'
cifradoAmericano Re = 'D'
cifradoAmericano Mi = 'E'
cifradoAmericano Fa = 'F'
cifradoAmericano Sol = 'G'
cifradoAmericano La = 'A'
cifradoAmericano Si = 'B'


-- Ejercicio 3

minimoElemento :: Ord a => [a] -> a 
minimoElemento xs = minimum xs

minimoElemento' :: Bounded a => Ord a => [a] -> a
minimoElemento' [] = maxBound
minimoElemento' (x:xs) = min x (minimoElemento' xs) 
